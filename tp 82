#include <bits/stdc++.h>
using namespace std;

int sumaElementosParesDivisiblesPor3(const vector<int> & V);
int main() {
    vector<int> V;
    int n;

    cout << "Ingresa la cantidad de números: ";
    cin >> n;

    cout << "Ingresa los números:";
    for (int i = 0; i < n; i++) {
        int num;
        cin >> num;
        V.push_back(num);
    }

    int resultado = sumaElementosParesDivisiblesPor3(V);

    cout << "La suma de elementos pares en posiciones divisibles por 3 es: " << resultado << endl;

    return 0;
}

int sumaElementosParesDivisiblesPor3(const vector<int> & V) {
    int suma = 0;
    for (int i = 0; i < V.size(); i++) {
        if (i % 3 == 0 && V[i] % 2 == 0) {
            suma += V[i];
        }
    }
    return suma;
}
