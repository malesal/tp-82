void LeerNumeros(vector<int>n){
cout<<"ingresa los numeros: ";
for(int i=0;i<n;i++){
int num;
cin>>num;
v.push_back(num);
 }
}
int DivisiblesPor3(vector<int>v){
int suma=0;
for(int i=0;i<v.size();i++){
 if(i%3==0 && v[i]%2==0){
  suma+=v[i];
 }
}
return suma;
}
